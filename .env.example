# Flask Configuration
SECRET_KEY=lightera-bundokai-secret-key-2024
DATABASE_URL=sqlite:///bundokai.db
FLASK_ENV=development
FLASK_DEBUG=True

# Email Configuration (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Alternative Email Providers
# For Outlook/Hotmail:
# SMTP_SERVER=smtp-mail.outlook.com
# SMTP_PORT=587

# For Yahoo:
# SMTP_SERVER=smtp.mail.yahoo.com
# SMTP_PORT=587

# Event Configuration
EVENT_NAME=BUNDOKAI 2024
EVENT_DATE=2024-12-15
EVENT_TIME=14:00
EVENT_LOCATION=Centro de Convenções Lightera
QR_DELIVERY_DAYS=7

# Security Settings
SESSION_SECRET=your-session-secret-here
CSRF_SECRET=your-csrf-secret-here

# Application Settings
MAX_PARTICIPANTS=2500
MAX_DEPENDENTS_PER_PARTICIPANT=5
CHECKIN_STATIONS=main,scanner,manual-search,entrance-1,entrance-2

# Database Settings (for production)
# DATABASE_URL=postgresql://username:password@localhost/bundokai
# DATABASE_POOL_SIZE=10
# DATABASE_POOL_TIMEOUT=30

# File Upload Settings
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=xlsx,xls,csv

# QR Code Settings
QR_CODE_SIZE=10
QR_CODE_BORDER=4
QR_CODE_ERROR_CORRECTION=L

# Delivery Settings
DELIVERY_CATEGORIES=Festa,Cesta Básica,Brinquedos,Material Escolar
LOW_STOCK_THRESHOLD=10
CRITICAL_STOCK_THRESHOLD=5

# Monitoring and Logging
LOG_LEVEL=INFO
LOG_FILE=logs/bundokai.log
ENABLE_ACCESS_LOG=True

# Cache Settings
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Rate Limiting
RATELIMIT_ENABLED=True
RATELIMIT_DEFAULT=100 per hour

# Backup Settings
BACKUP_ENABLED=True
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30

# Integration Settings
WEBHOOK_URL=https://your-webhook-url.com/bundokai
WEBHOOK_SECRET=your-webhook-secret

# Performance Settings
WORKERS=4
TIMEOUT=30
KEEPALIVE=2

# Development Settings
TESTING=False
WTF_CSRF_ENABLED=True
PRESERVE_CONTEXT_ON_EXCEPTION=True

